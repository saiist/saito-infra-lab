{
    "family": "saito-infra-lab-dev-app",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    },
    "executionRoleArn": "arn:aws:iam::977099016337:role/saito-infra-lab-dev-ecs-exec",
    "taskRoleArn": "arn:aws:iam::977099016337:role/saito-infra-lab-dev-ecs-task",
    "containerDefinitions": [
        {
            "name": "app",
            "image": "REPLACED_BY_CI",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "ENV",
                    "value": "dev"
                },
                {
                    "name": "PORT",
                    "value": "8080"
                },
                {
                    "name": "FAIL_HEALTH",
                    "value": "1"
                }
            ],
            "secrets": [
                {
                    "name": "DB_SECRET_JSON",
                    "valueFrom": "${DB_SECRET_ARN}"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/saito-infra-lab/dev/app",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "app"
                }
            }
        }
    ]
}